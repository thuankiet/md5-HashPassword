extends ../layout/home.pug

block content
  .container
    h1 Login
    
    if errors
      each error in errors
        .alert.alert-danger= error

    form(action='/auth/login', method='POST')
      input.form-control.shadow-none(name='email' type='text' placeholder='Email', value=values ? values.email : '')
      br
      input.form-control.shadow-none(name='password' type='password' placeholder='Password', value=values ? values.password : '' )
      br
      button.btn.btn-primary.shadow-none(type='submit') Login